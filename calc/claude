        }

        .display {
            background: rgba(0, 0, 0, 0.8);
            color: white;
            font-size: 2.5rem;
            font-weight: 300;
            text-align: right;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
            min-height: 80px;
